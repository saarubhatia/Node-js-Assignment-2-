<div class="container">
    <h1 style="text-align: center;">Contacts Details</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/addContacts" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Name" autofocus>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="city" placeholder="city">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="phone" placeholder="Phone">
            </div>
            <div class="form-group">
                <button class="btn btn-outline-dark btn-block">Submit</button>
            </div>
        </form>
    </div>
</div>