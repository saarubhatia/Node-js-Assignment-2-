<%-include('../partials/header') %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Book Store App</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%=specificBook.image%>">
                <div class="caption-full">
                    <h4 style="float:right">Price: <%=specificBook.price%></h4>
                    <h4><a><%=specificBook.title%></a></h4>
                    <p class="lead"><%=specificBook.description%></p>
                    <p>
                        <i>Published at: <%= moment(specificBook.createdAt).fromNow() %> </i>
                    </p>
                    <div class="btn-group" role="group">
                            <a class="btn btn-outline-dark btn-lg " href="/books/<%= specificBook._id %>/edit">Edit</a>
                            <form id="delete-form" action="/books/<%=specificBook._id%>?_method=DELETE"
                                method="POST">
                                <button class="btn btn-outline-dark btn-lg ml-4">Delete</button>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%-include('../partials/footer') %>