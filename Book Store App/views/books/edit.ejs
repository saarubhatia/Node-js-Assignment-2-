<%-include('../partials/header') %>
<div class="container">
        <h1 style="text-align: center;">Edit <%=book.title%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/books/<%= book._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="book[title]" value="<%=book.title%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[image]" value="<%=book.image%>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="book[description]" placeholder="Paste your book here!" rows="10"><%=book.description%></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[price]" value="<%=book.price%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-outline-dark btn-block">Update</button>
                </div>
            </form>
            <a style="color:black" href="/books">Go Back</a>
        </div>
</div>
<%-include('../partials/footer') %>